@model List<TP7.Web.Models.ShippersView>

@{
    ViewBag.Title = "Shippers Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Shippers</title>
</head>
<body>
    <div>
        <h1>Transportistas</h1>
        @Html.ActionLink("Agregar nuevo transportista", "InsertOrEdit", "Shippers")
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre de la empresa</th>
                    <th scope="col">Telefono</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shipper in Model)
                {
                    <tr>
                        <td scope="row">@shipper.ShipperID</td>
                        <td scope="row">@shipper.CompanyName</td>
                        <td scope="row">@shipper.Phone</td>
                        <td scope="row">
                            @Html.ActionLink("Editar", "InsertOrEdit", new { id = shipper.ShipperID }) |
                            @Html.ActionLink("Borrar", "Delete", new { id = shipper.ShipperID }, new { onclick = "return confirm ('Sguro de eliminar?')"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
